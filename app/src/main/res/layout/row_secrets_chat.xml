<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="10dp">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/contact_profile_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:paddingBottom="10dp"
        android:src="@drawable/dashboard_top_icon"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toTopOf="@+id/guideline_top" />

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/circle_img"
        app:layout_constraintBottom_toBottomOf="@+id/contact_profile_img"
        app:layout_constraintLeft_toLeftOf="@+id/contact_profile_img"
        app:layout_constraintRight_toRightOf="@+id/contact_profile_img"
        app:layout_constraintTop_toBottomOf="@+id/contact_profile_img" />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="Rohit Rathor"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/contact_profile_img"
        app:layout_constraintRight_toLeftOf="@+id/time"
        app:layout_constraintTop_toTopOf="@+id/guideline_top" />

    <TextView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="03:52 pm"
        android:textColor="@color/text_grey"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="@+id/guideline_end"
        app:layout_constraintTop_toTopOf="@+id/guideline_top" />

    <ImageView
        android:id="@+id/contact_double_pick"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/doble_tick"
        app:layout_constraintLeft_toRightOf="@+id/contact_profile_img"
        app:layout_constraintTop_toTopOf="@+id/contact_name" />

    <TextView
        android:id="@+id/contact_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins_medium"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintRight_toLeftOf="@+id/time"
        android:text="scsd acscsacsaccascsacsfas fasf asf cscassacsaf asff  efw"
        android:textColor="@color/text_grey"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@+id/contact_double_pick"
        app:layout_constraintTop_toTopOf="@+id/contact_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/text_grey"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/contact_profile_img"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="0dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="0dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="10dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="29dp" />

</android.support.constraint.ConstraintLayout>